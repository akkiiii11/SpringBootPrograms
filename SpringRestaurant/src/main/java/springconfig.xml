<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="restBean" class="com.spring.Restaurant">
<constructor-arg ref="teaBean"></constructor-arg>
<property name="welcomeNote" value="Welcome to Restaurant"></property>
</bean>

<bean id="teaBean" class="com.spring.Tea"></bean>
<bean id="coffeeBean" class="com.spring.Coffee"></bean>

</beans>