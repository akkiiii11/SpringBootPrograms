<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="shape" class="com.spring.Painter">
<constructor-arg ref="trianglebean"></constructor-arg>
</bean>

<bean id="squarebean" class="com.spring.Square"></bean>

<bean id="trianglebean" class="com.spring.Triangle">
<constructor-arg name="color" value="Red"></constructor-arg>
</bean>

<bean id="dancerbean" class="com.spring.Dancer"></bean>

<bean id="mahi" class="com.spring.Cricketer">
<property name="runs" value="120"></property>
</bean>

</beans>